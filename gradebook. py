# Function to calculate grade
def assign_grade(marks):
    if marks >= 90:
        return "A+"
    elif marks >= 80:
        return "A"
    elif marks >= 70:
        return "B"
    elif marks >= 60:
        return "C"
    elif marks >= 50:
        return "D"
    else:
        return "F"

# Function to display table
def display_table(students):
    print("\n{:<15} {:<10} {:<10}".format("Name", "Marks", "Grade"))
    print("-" * 35)
    for name, marks in students.items():
        print("{:<15} {:<10} {:<10}".format(name, marks, assign_grade(marks)))

# Main program
def main():
    students = {}
    n = int(input("Enter number of students: "))

    for i in range(n):
        name = input(f"Enter name of student {i+1}: ")
        marks = float(input(f"Enter marks of {name}: "))
        students[name] = marks

    marks_list = list(students.values())
    
    mean_marks = statistics.mean(marks_list)
    median_marks = statistics.median(marks_list)
    min_marks = min(marks_list)
    max_marks = max(marks_list)

    pass_students = [name for name, marks in students.items() if marks >= 50]
    fail_students = [name for name, marks in students.items() if marks < 50]

    print("\n===== GradeBook Report =====")
    display_table(students)

    print("\n----- Statistics -----")
    print(f"Average Marks: {mean_marks:.2f}")
    print(f"Median Marks: {median_marks:.2f}")
    print(f"Highest Marks: {max_marks}")
    print(f"Lowest Marks: {min_marks}")

    print("\n----- Summary -----")
    print(f"Total Students: {n}")
    print("Passed: ", ', '.join(pass_students) if pass_students else "None")
    print("Failed: ", ', '.join(fail_students) if fail_students else "None")

if _name_ == "_main_":
